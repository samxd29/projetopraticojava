
public class conta {
	double saldo;
	int agencia;
	int numero;
	String titular;
	
	//metodo : uma maneira de fazer as coisas
	// void: não retorna nada;
	public void deposita(double valor) {
		this.saldo = this.saldo + valor;
	}
	
	public boolean saca(double valor) {
		if(this.saldo >= valor) {
			this.saldo = this.saldo - valor;
			return true;
		} else {
			System.out.println("Valor não pode ser sacado por falta de saldo");
		}
	}
}
